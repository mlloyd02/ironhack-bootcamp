<h1>Word Central</h1>

<h2>Submit text for ascii conversion</h2>

<form action="/asciis" method="post">
  <div>
    <label for="ascii_user_text">Text</label>
    <textarea name="asciis[user_text]" id="ascii_user_text"></textarea>
  </div>
  <button type="submit">Submit text</button>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</form>