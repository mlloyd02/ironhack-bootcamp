<div class="row">

	<div class="clock col-md-10 col-md-offset-1">
		<div class="row">
				
			<div class="clock-prog">
				<div class="dial">
					<%= image_tag("dial.svg") %>
				</div>
				<progress value="" max=".707"></progress>	
			</div>
		
		</div>
		<div class="row">
			<div class="col-md-6">
				<%= form_for @emotion do |f| %>
					
					<div class="AScontainer pleasure">
						<%= f.range_field(:valence, in: 0.00..1.00, step: 0.01) %>
						<div class="inline"><p>Sad</p><p>Happy</p></div>
					<!-- 	<div class="ASintensityCue"></div> -->
					</div>

					<div class="AScontainer arousal">
						<%= f.range_field(:arousal, in: 0.00..1.00, step: 0.01) %>
						<div class ="inline"><span><p>Tired/Drained</p></span><span class="slider-max"><p>Anxious/Alert</p></span></div>
						<div class="ASintensityCue"></div>
					</div>
					
					<%= f.submit "Submit" %>

				<% end %>
			</div>

			

		</div>
	</div>
</div>

